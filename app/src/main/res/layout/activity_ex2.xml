<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/status"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What type of coffe? "
        android:background="#eeee22"/>

    <RadioGroup
        android:id="@+id/rdiGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RadioButton
        android:id="@+id/rdoDecaf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Decaf"
        android:checked="true" />

    <RadioButton
        android:id="@+id/rdoExpresso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Expresso"/>

    <RadioButton
        android:id="@+id/rdoColombian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Colombian"/>

    </RadioGroup>

        <TextView
            android:id="@+id/status1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What else in you coffe"
            android:background="#eeee22"/>

        <CheckBox
            android:id="@+id/cCream"
            android:text="Cream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/cSuger"
            android:text="Suger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay"/>
</LinearLayout>
