<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dev.and.stork.designui.MainActivity">

    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What else in you coffe?"
        android:background="#eeee22"/>

    <CheckBox
        android:id="@+id/cbCream"
        android:text="Cream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <CheckBox
        android:id="@+id/cbSuger"
        android:text="Suger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbCream"
        android:layout_alignLeft="@+id/cbCream"
        android:layout_alignStart="@+id/cbCream" />

    <Button
        android:layout_weight="1"
        android:text="Pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbSuger"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btnPay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <Button
            android:layout_weight="1"
            android:text="Ex 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="41dp"
            android:id="@+id/btnEx2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_weight="1"
            android:text="Ex 3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnEx3"
            android:layout_alignBaseline="@+id/btnEx2"
            android:layout_alignBottom="@+id/btnEx2"
            android:layout_toRightOf="@+id/btnEx2"
            android:layout_toEndOf="@+id/btnEx2" />

        <Button
            android:layout_weight="1"
            android:text="Ex 4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnEx4"
            android:layout_alignBaseline="@+id/btnEx3"
            android:layout_alignBottom="@+id/btnEx3"
            android:layout_toRightOf="@+id/btnEx3"
            android:layout_toEndOf="@+id/btnEx3" />
        <Button
            android:layout_weight="1"
            android:text="Ex 5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnEx5"
            android:layout_alignBaseline="@+id/btnEx4"
            android:layout_alignBottom="@+id/btnEx4"
            android:layout_toRightOf="@+id/btnEx4"
            android:layout_toEndOf="@+id/btnEx4" />
    </LinearLayout>


</RelativeLayout>
